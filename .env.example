# Application Settings
APP_NAME=Dev Team Manager
APP_VERSION=1.0.0
DEBUG=1
ENVIRONMENT=development

# Security Keys (Required)
SECRET_KEY=your-secret-key-here  # Generate a secure key for production
SESSION_SECRET_KEY=your-session-secret-key  # Generate a secure key for production

# External API Keys (Required)
MONDAY_API_KEY=your-monday-api-key
SLACK_BOT_TOKEN=your-slack-bot-token
OPENAI_API_KEY=your-openai-api-key

# Database Settings
POSTGRES_USER=devteam
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=devteam_db
POSTGRES_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_MAX_CONNECTIONS=10

# Monitoring Settings
PROMETHEUS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s

# OpenAI Settings
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Monday.com Settings
MONDAY_BOARD_ID=your-board-id
MONDAY_RATE_LIMIT=30

# Slack Settings
SLACK_DEFAULT_CHANNEL=#team-updates
SLACK_NOTIFICATION_LEVELS=INFO,WARNING,ERROR